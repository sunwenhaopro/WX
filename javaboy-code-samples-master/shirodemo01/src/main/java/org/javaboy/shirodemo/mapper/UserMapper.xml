<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.javaboy.shirodemo.mapper.UserMapper">

    <select id="getUserByUsername" resultType="org.javaboy.shirodemo.model.User">
        select * from user where username=#{username};
    </select>
</mapper>